<%- include('../../views/partials/adminheader') %>
 <div class="side">
    <aside>
        <ul>
            <li><a href="/admin/dashboard">Dashboard</a></li>
            <li class="active"><a href="/admin/Products">Products</a> </li>
            <li><a href="/admin/Users">Users</a></li>
            <li><a href="/admin/Coupons">Coupons</a></li>
            <li><a href="/admin/order">Order</a></li>
            <li><a href="/admin/Offers">Offers</a></li>
            <li><a href="/admin/category">Category</a></li>
            <li><a href="/admin/salesreport">Sales report</a></li>
           
        </ul>
    </aside>
    <main>
        <!-- Header Navigation Bar -->
         <h2>Product List</h2>
        <div class="list-header">  
           <div class="search-add">
               
               <button class="add-new"><a class="nav-link" href="/admin/add-product">Add New</a></button>
           </div>
        </div>
       <table>
           <thead>
               <tr>
                <th>Image</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Category</th>
                <th>Stock</th>
                <th>Action</th>
               </tr>
           </thead>
           <tbody>
            <%for (let i=0;i<product.length;i++){%>
               <tr>
                <td><img src="/uploads/<%=product[i].images[0]%>" alt="Product Image"></td>
                <td><%=product[i].productName%></td>
                <td><%=product[i].salePrice%></td>
                <td><%=product[i].category.name%></td>
                <td><%=product[i].stock%></td>
                   <td>
                    <button class="edit-btn"><a class="nav-link" href="/admin/editProduct/<%=product[i]._id%>">Edit</a></button>
                       <form action="/admin/deleteProduct/<%=product[i]._id%>" method="POST" style="display:inline;">
                        <button class="delete-btn">Delete</button>
                       </form>
                   </td>
               </tr>
              <%}%>
               
              
           </tbody>
       </table>
       <!-- Pagination -->
       <div class="pagination">
        <% if (currentPage > 1) { %>
             <a href="?page=<%= currentPage - 1 %>">&laquo; Previous</a>
               <% } %> <% for (let i = 1; i <= totalPages; i++) { %> <% if (i ===
                currentPage) { %>
               <span class="current-page"><%= i %></span>
               <% } else { %>
               <a href="?page=<%= i %>"><%= i %></a>
               <% } %> <% } %> <% if (currentPage < totalPages) { %>
               <a href="?page=<%= currentPage + 1 %>">Next &raquo;</a>
               <% } %>
   </div>
   </main>
</div>
<%- include('../../views/partials/adminfooter') %>