            </td>
             <td> 
                <form action="/wishlist-delete/<%=product._id%>" method="POST" style="display:inline;">
                     <button class="delete-btn"> <i class="fa-sharp fa-solid fa-trash"></i> Remove </button>
                </form>
            </td>
            </tr>
           
            <%})%>
           
        </tbody>
    </table>

