    <!-- <div class="mar"> wishlist</div> -->
  <div class="wishlist-container">
    <h1>My Wishlist <span>(<%=wishlist.products.length%>)</span></h1>
  </div>
    <table>
        <thead>
            <tr>
             <th>Image</th>
             <th>Name</th>
             <th>Price</th>
             <th>Add to cart</th>
             <th>Remove</th>
            </tr>
        </thead>
        <tbody>
        <% wishlist.products.forEach((product)=>{%>
            <tr>
             <td><img src="/uploads/<%=product.images[0]%>" alt="Product Image"></td>
             <td><strong><%=product.productName%></strong><br><%=product.category.name%><br><%=product.color%></td>
             <td>‚Çπ<%=product.salePrice%></td>
             <td>
              <!-- <form action="/add-to-cart/<%=product._id%>" method="post"><button class="add-to-cart-btn"><i class="fa-solid fa-cart-shopping"></i> Add to Cart</button></form> -->
